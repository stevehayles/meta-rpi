[global]
   workgroup = WORKGROUP
   server string = Quadra Server
   security = user
   map to guest = Bad User
   log file = /var/log/samba/%m.log
   max log size = 50
   dns proxy = no 

[share]
    path = /home/root/share
    browsable = yes
    guest ok = yes
    read only = no
    create mask = 0755
    force user = root

